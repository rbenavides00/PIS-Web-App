        <h1>Search Engine</h1>

        <form action="/results" method="GET">
            <input
                type="text"
                name="search_query"
                placeholder="Enter your search query"
                autocomplete="off"
                required
            />
            <button type="submit">Search</button>
        </form>
    </body>
</html>